
<div class="container">
<h1>Dashboard Admin</h1>
<section class="kpi">
  <div class="kpi-card">
    <h3>120</h3>
    <p>Nombre de visiteurs</p>
  </div>
  <div class="kpi-card">
    <h3>15</h3>
    <p>Nombre de visiteurs qui ont acheté</p>
  </div>
  <div class="kpi-card">
    <h3>5%</h3>
    <p>Taux de conversion</p>
  </div>
  <div class="kpi-card">
    <h3>250</h3>
    <p>Nombre de produits vendus</p>
  </div>
  <div class="kpi-card">
    <h3>80</h3>
    <p>Produits vendus - Catégorie A</p>
  </div>
  <div class="kpi-card">
    <h3>170</h3>
    <p>Produits vendus - Catégorie B</p>
  </div>
  <div class="kpi-card">
    <h3>5000 €</h3>
    <p>Volume de ventes</p>
  </div>
  <div class="kpi-card">
    <h3>25%</h3>
    <p>Croissance des ventes</p>
  </div>
</section>

<div class="action-buttons">
  <button>Créer un produit</button>
  <button>Ajouter une promotion</button>
</div>

<div class="chart-container">
  <h2 style="text-align: center;">Croissance de lapplication</h2>
  <canvas id="growthChart"></canvas>
</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
const ctx = document.getElementById('growthChart').getContext('2d');
const growthChart = new Chart(ctx, {
  type: 'line',
  data: {
    labels: ['2019', '2020', '2021', '2022', '2023'],
    datasets: [{
      label: 'Croissance (%)',
      data: [5, 10, 15, 25, 40],
      borderColor: '#6200ea',
      backgroundColor: 'rgba(98, 0, 234, 0.2)',
      borderWidth: 2,
      fill: true
    }]
  },
  options: {
    responsive: true,
    plugins: {
      legend: {
        display: true,
        position: 'top',
      },
    },
    scales: {
      x: {
        beginAtZero: true
      },
      y: {
        beginAtZero: true
      }
    }
  }
});
</script>

