<h1 style="text-align: center; margin: 20px 0;">Espaces de Ressources Achetées</h1>
<div class="container">
  <div class="filters-products-container">
    <section class="products">
    
    <% if @ressources_achetees.any? %>
      <% @ressources_achetees.each do |ressource| %>
        <div class="product-card">
          <%= link_to image_tag(ressource.lienImage, alt: "Produit") %>
          <h3> <%= ressource.titre %> </h3>
          <p><%= ressource.description %></p>
          <p><strong>Prix : <%= number_to_currency(ressource.prix) %></strong></p>
          <p><strong>Vous pouvez telecharger la resource ici : <%= ressource.lien%></strong></p>
          <button><a href="<%= product_path(id: ressource.id) %>">Voir Produit</a></button>
        </div>
      <% end %>
    <% else %>
      <p>Aucune ressource achetée.</p>
    <% end %>
    </section>
  </div>
</div>


<%= stylesheet_link_tag "espacepersonnelle", media: "all" %>
